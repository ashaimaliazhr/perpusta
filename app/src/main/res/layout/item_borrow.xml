<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/borrow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/agenda"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTitleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_buku"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/tvPenerbit"
        app:layout_constraintStart_toEndOf="@id/borrow"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvPenerbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@id/tvTanggalPinjam"
        app:layout_constraintStart_toEndOf="@id/borrow"
        app:layout_constraintTop_toBottomOf="@id/tvTitleStatus"/>

    <TextView
        android:id="@+id/tvTanggalPinjam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="@string/tanggal_pinjam"
        app:layout_constraintBottom_toTopOf="@id/tvTanggalKembali"
        app:layout_constraintStart_toEndOf="@id/borrow" />

    <TextView
        android:id="@+id/tvTanggalKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="@string/tanggal_kembali"
        app:layout_constraintStart_toEndOf="@id/borrow"
        app:layout_constraintTop_toBottomOf="@id/tvTanggalPinjam"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

